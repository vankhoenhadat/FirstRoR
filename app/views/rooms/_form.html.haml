= form_for @room do |f|
  - if @room.errors.any?
    #error_explanation
      %h2= "#{pluralize(@room.errors.count, "error")} prohibited this room from being saved:"
      %ul
        - @room.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :descriptions
    = f.text_field :descriptions
  .field
    = f.label :minrate
    = f.text_field :minrate
  .field
    = f.label :active
    = f.text_field :active
  .actions
    = f.submit 'Save'
